<div class="container">
  <%= form_for(@cupping) do |f| %>
  <fieldset>
    
   <div class="beens-data">
     <div class="form-group">
      <label>- COUNTRY -</label>
      <div class="form-control">
       <%= f.select :country_id, Country.all.map{|c| [c.name, c.id]}%>
      </div>
     </div>
     <div class="form-group">
      <label>- ORIGIN -</label>
      <%= f.text_field :origin, class: 'form-control', style: 'text-align: center;', placeholder: '生産地・農園名'%>
     </div>
     <div class="form-group">
       <label>- PROCESS -</label>
       <%= f.text_field :process, class: 'form-control', style: 'text-align: center;', placeholder: '生産処理(ナチュラル・ウォッシュト)'%>
     </div>
     <div class="form-group">
      <label>- SHOP -</label>
      <%= f.text_field :shop, class: 'form-control', style: 'text-align: center;', placeholder: '購入場所'%>
     </div>
     <div class="form-group">
      <label>- MEMO -</label>
      <%= f.text_area :memo, class:  'form-control', rows: "5", style: 'text-align: center;', placeholder: 'エイジング、焙煎度合い..etc'%>
     </div>
   </div>

   <div class="slider-wrapper">
     <div class="form-group">
       <p class="lead">CLEAN CUP</p>
        <%= f.range_field :clean_cup, :min=>0, :max=>8, :class=>"slide",:value=>@cupping.clean_cup, 
                          :id=>"clean_cup_slider",
                          :list=>"tickmarks",:step=>"0.5"%>
       <datalist id="tickmarks">
        <option value="0" label="0%">
        <option value="1">
        <option value="2">
        <option value="3">
        <option value="4">
        <option value="5" label="50%">
        <option value="6">
        <option value="7">
        <option value="8">
       </datalist>                      
       <script >
         var slider = document.getElementById("clean_cup_slider");
        slider.oninput = function() {
          var newValue = $('#clean_cup_slider').val();
                  $("#clean_cup").html(newValue);
        }
       </script>
      <div class="point-counter">
        <text id="clean_cup" class="balloon3-left" ><%=@cupping.clean_cup%></text>
      </div>
     </div>
    


     <div class="form-group">
       <p class="lead">SWEET</p>
        <%= f.range_field :sweet, :min=>0, :max=>8, :class=>"slide",
                    :value=>@cupping.sweet, :id=>"sweet_slider",
                    :list=>"tickmarks",:step=>"0.5"%>
       <script >
        var slider = document.getElementById("sweet_slider");
        slider.oninput = function() {
          var newValue = $('#sweet_slider').val();
                  $("#sweet").html(newValue);
        }
       </script>
       <div class="point-counter">
        <text id="sweet" class="balloon3-left"><%=@cupping.sweet%></text>
       </div>
      </div>
      

      <div class="form-group">
       <p class="lead">ACIDITY</p>
        <%= f.range_field :acidity, :min=>0, :max=>8, :class=>"slide",
                    :value=>@cupping.acidity, :id=>"acidity_slider",
                    :list=>"tickmarks",:step=>"0.5"%>
       <script >
        var slider = document.getElementById("acidity_slider");
        slider.oninput = function() {
          var newValue = $('#acidity_slider').val();
                  $("#acidity").html(newValue);
        }
       </script>
       <div class="point-counter">
        <text id="acidity" class="balloon3-left"><%=@cupping.acidity%></text>
       </div>
      </div>


      <div class="form-group">
       <p class="lead">MOUTH FEEL</p>
        <%= f.range_field :mouth_feel, :min=>0, :max=>8, :class=>"slide",
                    :value=>@cupping.mouth_feel, :id=>"mouth_feel_slider", :list=>"tickmarks",:step=>"0.5" %>
       <script >
        var slider = document.getElementById("mouth_feel_slider");
        slider.oninput = function() {
          var newValue = $('#mouth_feel_slider').val();
                  $("#mouth_feel").html(newValue);
        }
       </script>
       <div class="point-counter">
        <text id="mouth_feel" class="balloon3-left"><%=@cupping.mouth_feel%></text>
       </div>
      </div>


      <div class="form-group">
       <p class="lead">FLAVOR</p>
        <%= f.range_field :flavor, :min=>0, :max=>8, :class=>"slide",
                    :value=>@cupping.flavor, :id=>"flavor_slider", :list=>"tickmarks",:step=>"0.5" %>
       <script >
        var slider = document.getElementById("flavor_slider");
        slider.oninput = function() {
          var newValue = $('#flavor_slider').val();
                  $("#flavor").html(newValue);
        }
       </script>
       <div class="point-counter">
        <text id="flavor" class="balloon3-left"><%=@cupping.flavor%></text>
       </div>
      </div>



      <div class="form-group">
       <p class="lead" >AFTER TASTE</p>
        <%= f.range_field :after_taste, :min=>0, :max=>8, :class=>"slide",
                    :value=>@cupping.after_taste, :id=>"after_taste_slider", :list=>"tickmarks",:step=>"0.5" %>
       <script >
       var slider = document.getElementById("after_taste_slider");
        slider.oninput = function() {
          var newValue = $('#after_taste_slider').val();
                  $("#after_taste").html(newValue);
        }
       </script>
       <div class="point-counter">
        <text id="after_taste" class="balloon3-left"><%=@cupping.after_taste%></text>
       </div>
      </div>



      <div class="form-group">
       <p class="lead">BALANCE</p>
        <%= f.range_field :balance, :min=>0, :max=>8, :class=>"slide",
                    :value=>@cupping.balance, :id=>"balance_slider", :list=>"tickmarks",:step=>"0.5" %>
       <script >
        var slider = document.getElementById("balance_slider");
        slider.oninput = function() {
          var newValue = $('#balance_slider').val();
                  $("#balance").html(newValue);
        }
       </script>
       <div class="point-counter">
        <text id="balance" class="balloon3-left"><%=@cupping.balance%></text>
       </div>
      </div>

      <div class="form-group">
       <p class="lead">OVER ALL</p>
        <%= f.range_field :over_all, :min=>0, :max=>8, :class=>"slide",
                    :value=>@cupping.over_all, :id=>"over_all_slider", :list=>"tickmarks",:step=>"0.5" %>
       <script >
        var slider = document.getElementById("over_all_slider");
        slider.oninput = function() {
          var newValue = $('#over_all_slider').val();
                  $("#over_all").html(newValue);
        }
       </script>
       <div class="point-counter">
        <text id="over_all" class="balloon3-left"><%=@cupping.over_all%></text>
       </div>
      </div>
   </div>


　　 <div class="total-box">
       <text id="total_point">0</text>
    </div>
    <script>
      $(".slide").change(function (){
        var sum = 36;
            sum += Number($('#clean_cup_slider').val());
            sum += Number($('#sweet_slider').val());
            sum += Number($('#acidity_slider').val());
            sum += Number($('#mouth_feel_slider').val());
            sum += Number($('#flavor_slider').val());
            sum += Number($('#after_taste_slider').val());
            sum += Number($('#balance_slider').val());
            sum += Number($('#over_all_slider').val());
            $("#total_point").html(sum);
      });
    </script>


    <div class="form-group flavor-text" >
     <%= f.text_area :flavor_coment, class:  'form-control',  placeholder: 'FLAVOR COMMENT',rows: "8"%>
    </div>
  </fieldset>

　　<div class ="create-btn">
     <%= f.submit "更新", class: 'btn btn-primary', data: { disable_with: "SAVE" } %>
     <font style="vertical-align: inherit;"></font>
   </div>
   <% end %>
</div>








